
<odoo>
  <record id="view_sa40_attendance_log_list" model="ir.ui.view">
    <field name="name">sa40.attendance.log.list</field>
    <field name="model">sa40.attendance.log</field>
    <field name="arch" type="xml">
      <list>
        <field name="device_id"/>
        <field name="log_user_uid"/>
        <field name="partner_id"/>
        <field name="timestamp"/>
        <field name="status"/>
      </list>
    </field>
  </record>

  <record id="view_sa40_attendance_log_form" model="ir.ui.view">
    <field name="name">sa40.attendance.log.form</field>
    <field name="model">sa40.attendance.log</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="device_id"/>
            <field name="log_user_uid"/>
            <field name="partner_id"/>
            <field name="timestamp"/>
            <field name="status"/>
            <field name="raw"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_sa40_attendance_log_list" model="ir.actions.act_window">
    <field name="name">SA40 Logs</field>
    <field name="res_model">sa40.attendance.log</field>
    <field name="view_mode">list,form</field>
    <!-- Primary list view -->
    <field name="view_id" ref="view_sa40_attendance_log_list"/>
  </record>

  <menuitem id="menu_sa40_attendance_logs" name="Logs" parent="menu_sa40_root" action="action_sa40_attendance_log_list"/>
</odoo>