
<odoo>
  <record id="view_sa40_user_tree" model="ir.ui.view">
    <field name="name">sa40.user.tree</field>
    <field name="model">sa40.user</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="device_id"/>
        <field name="device_uid"/>
        <field name="partner_id"/>
      </tree>
    </field>
  </record>

  <record id="view_sa40_user_form" model="ir.ui.view">
    <field name="name">sa40.user.form</field>
    <field name="model">sa40.user</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="device_id"/>
            <field name="device_uid"/>
            <field name="device_user_id"/>
            <field name="partner_id"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_sa40_user_tree" model="ir.actions.act_window">
    <field name="name">SA40 Users</field>
    <field name="res_model">sa40.user</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_sa40_users" name="Users" parent="menu_sa40_root" action="action_sa40_user_tree"/>
</odoo>