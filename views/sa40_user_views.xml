
<odoo>
  <record id="view_sa40_user_list" model="ir.ui.view">
    <field name="name">sa40.user.list</field>
    <field name="model">sa40.user</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="device_id"/>
        <field name="device_user_id"/>
        <field name="user_id"/>
      </list>
    </field>
  </record>

  <record id="view_sa40_user_form" model="ir.ui.view">
    <field name="name">sa40.user.form</field>
    <field name="model">sa40.user</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="device_id"/>
            <field name="device_user_id"/>
            <field name="user_id"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_sa40_user_list" model="ir.actions.act_window">
    <field name="name">SA40 Users</field>
    <field name="res_model">sa40.user</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem id="menu_sa40_users" name="Users" parent="menu_sa40_root" action="action_sa40_user_list"/>
</odoo>